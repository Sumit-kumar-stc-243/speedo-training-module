<style>
  .custom-swiper-{{ block.id }}{
    width: 48vw !important;
  } 
</style>

<div class="custom-swiper-{{ block.id }} swiper" style="width: {{ block.settings.container_width }}; margin: 0 auto;">
  <div class="swiper-wrapper">
    {% content_for 'blocks' %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiperEl = document.querySelector('.custom-swiper-{{ block.id }}');
    if (swiperEl && typeof Swiper !== 'undefined') {
      new Swiper(swiperEl, {
        slidesPerView: 1,
        spaceBetween: 20,
        loop: false,
      });
    } else {
      console.warn('Swiper not loaded or element not found');
    }
  });
</script>

{% schema %}
{
  "name": "custom Swiper",
  "settings": [
    {
      "type": "select",
      "id": "container_width",
      "label": "Container Width",
      "options": [
        {
          "value": "100%",
          "label": "Full Width"
        },
        {
          "value": "50%",
          "label": "Half Width"
        }
      ],
      "default": "100%"
    }
  ],
  "blocks": [
    {
      "type": "swiper-slide"
    }
  ],
  "presets": [{ "name": "Custom Swiper" }]
}
{% endschema %}
